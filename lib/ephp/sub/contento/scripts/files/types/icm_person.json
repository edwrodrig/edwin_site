    ]}},
    {"field": "education", "type": "list", "elem" : { "type": "object", "fields": [
      {"field": "academic_program", "type": "ref", "display": true, "collection": "icm_academic_programs"},
      {"field": "duration", "type": "custom", "type_name": "common_duration"},
      {"field": "tutors", "type": "list", "elem" : { "type": "ref", "collection": "icm_persons" }},
      {"field": "tesis", "type" : "object", "fields": [
        {"field": "type", "type": "enum", "options" : [ { "value" : "t"}, {"value": "hp"}] },
